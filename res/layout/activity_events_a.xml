<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Events_a" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >

        <TableRow>

            <Button
                android:id="@+id/artist_gigs"
                android:drawableLeft="@drawable/sound"
                android:drawableRight="@drawable/next" 
                />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/events_calender"
                android:drawableLeft="@drawable/event"
                android:drawableRight="@drawable/next"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/gig_map"
                android:drawableLeft="@drawable/map"
                android:drawableRight="@drawable/next"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/venues"
                android:drawableLeft="@drawable/venue"
                android:drawableRight="@drawable/next"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/my_gigs"
                android:drawableLeft="@drawable/fav"
                android:drawableRight="@drawable/next"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>