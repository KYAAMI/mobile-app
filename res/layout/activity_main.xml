<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:gravity="fill_horizontal"
        android:text="@string/menue"
        android:textStyle="bold"
        android:textSize="40sp" />

    <Button
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:text="@string/music"
        android:onClick="startActivityMusic" />
    
    <Button
        android:id="@+id/events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:text="@string/events"
        android:onClick="startActivityEvents" />
    
    <Button
        android:id="@+id/merchandise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:text="@string/merchandise"
        android:onClick="startActivityMerchandise" />

    <Button
        android:id="@+id/literature"
        android:layout_width="wrap_content"
        android:gravity="fill_horizontal"
        android:layout_height="wrap_content"
        android:text="@string/literature"
        android:onClick="startActivityLiterature" />

    <Button
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:text="@string/radio"
        android:onClick="startActivityRadio" />

</LinearLayout>
